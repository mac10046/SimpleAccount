<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar BorderPane.alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uptech.accounted.controller.MenuBarController">
	<menus>
		<Menu mnemonicParsing="false" text="File">
			<items>
				<MenuItem mnemonicParsing="false" onAction="#exit" text="Logout" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Forms">
			<items>
				<MenuItem mnemonicParsing="false" onAction="#showLedgerForm" text="Ledger" />
				<MenuItem mnemonicParsing="false" onAction="#showDepartmentForm" text="Department" />
				<MenuItem mnemonicParsing="false" onAction="#showInitiatorForm" text="Initiator" />
				<MenuItem mnemonicParsing="false" onAction="#showRecipientForm" text="Recepient" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="">
			<graphic>
				<Button mnemonicParsing="false" onAction="#showTransactionForm" text="Transaction" />
			</graphic>
		</Menu>
		<Menu mnemonicParsing="false" text="">
			<graphic>
				<Button mnemonicParsing="false" onAction="#showReportForm" text="Report" />
			</graphic>
		</Menu>
	</menus>
</MenuBar>
